{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "semi": [1, "always"],
    "block-spacing": [1, "always"],
    "no-console": 1,
    "no-unused-vars": [1, { "vars": "all", "args": "none" }],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "object-curly-spacing": [1, "always"],
    "operator-assignment": [1, "always"],
    "react/no-danger": 0
  }
}
